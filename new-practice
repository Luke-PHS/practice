def tic_tac_toe():
    board = [[" " for _ in range(3)] for _ in range(3)]
    current_player = "X"

    def print_board():
        for row in board:
            print("|".join(row))
            print("-----")

    def get_player_move():
        while True:
            try:
                row, col = map(int, input(f"Player {current_player}, enter your move (row, col): ").split(","))
                if 0 <= row <= 2 and 0 <= col <= 2 and board[row][col] == " ":
                    return row, col
                else:
                    print("Invalid move. Please try again.")
            except (ValueError, IndexError):
                print("Invalid input. Please enter two numbers separated by a comma.")

    def check_win():
        # Check rows
        for row in board:
            if row.count(current_player) == 3:
                return True

        # Check columns
        for col in range(3):
            if all(board[row][col] == current_player for row in range(3)):
                return True

        # Check diagonals
        if all(board[i][i] == current_player for i in range(3)) or all(board[i][2 - i] == current_player for i in range(3)):
            return True

        return False

    def check_draw():
        return all(cell != " " for row in board for cell in row)

    print_board()
    while True:
        row, col = get_player_move()
        board[row][col] = current_player
        print_board()

        if check_win():
            print(f"Player {current_player} wins!")
            break

        if check_draw():
            print("It's a draw!")
            break

        current_player = "O" if current_player == "X" else "X"

tic_tac_toe()